{
  "manifest_version": 3,
  "name": "View-Based Feed Filter",
  "version": "1.0.0",
  "description": "Hide posts/profiles that match your own block rules on sites you choose.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "View Filter",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
